<div class="uk-section">
    <div class="uk-container">
        <h1>{{#ifeq list 'Infra'}}Infrastructure{{else}}{{list}}{{/ifeq}}</h1>
        {{#if data.classes}}
            <select class="uk-select filter-classes">
                <option style="display:none">Filter Classifier</option>
                {{#each data.classes}}
                    <option value="{{this.slug}}">{{this.name}}</option>
                {{/each}}
            </select>
            <script>$(document).ready(function(){$('.filter-classes').change(function(){location.href='/{{section}}/'+$(this).val();})});</script>
        {{/if}}
        {{#if data.rows}}
        <table class="uk-table uk-table-hover uk-table-striped uk-data-table" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    {{#has data.keys 'qty'}}<th>Quantity</th>{{/has}}
                    {{#has data.keys 'classes'}}<th>Classifiers</th>{{/has}}
                    {{#has data.keys 'location'}}<th>Location</th>{{/has}}
                    {{#has data.keys 'examples'}}<th>Example Statement</th>{{/has}}
                    {{#has data.keys 'coords'}}<th>Coordinates</th>{{/has}}
                </tr>
            </thead>
            <tbody>
            {{#each data.rows}}
                    <tr>
                        <td><a href="/{{../sing}}/{{slug}}">{{name}}</a></td>
                        <td>{{desc.html}}</td>
                        {{#has ../data.keys 'qty'}}<td>{{#if qty}}{{qty}}{{else}}0{{/if}}</td>{{/has}}
                        {{#has ../data.keys 'classes'}}
                            <td>{{getFirstX classes 3 tail="..." join=", " key="name"}}</td>
                        {{/has}}
                        {{#has ../data.keys 'location'}}<td>{{{locLink location}}}</td>{{/has}}
                        {{#has ../data.keys 'examples'}}
                            <td>{{getFirstX examples 1 join=""}}</td>
                        {{/has}}
                        {{#has ../data.keys 'coords'}}<td>{{{locLink coords}}}</td>{{/has}}
                    </tr>
            {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    {{#has data.keys 'qty'}}<th>Quantity</th>{{/has}}
                    {{#has data.keys 'classes'}}<th>Classifiers</th>{{/has}}
                    {{#has data.keys 'location'}}<th>Location</th>{{/has}}
                    {{#has data.keys 'examples'}}<th>Example Statement</th>{{/has}}
                    {{#has data.keys 'coords'}}<th>Coordinates</th>{{/has}}
                </tr>
            </tfoot>
        </table>
        {{else}}
            <h3>ðŸ¤· Could not find any {{#ifeq list 'Infra'}}Infrastructure(s?){{else}}{{list}}{{/ifeq}}.</h3>
        {{/if}}
    </div>
</div>
