{{#*inline "lat"}}{{#if coords}}{{get coords 1}}{{else}}{{get this 1}}{{/if}}{{/inline}}
{{#*inline "long"}}{{#if coords}}{{get coords 0}}{{else}}{{get this 0}}{{/if}}{{/inline}}
{{#*inline "latlong"}}{{>lat}}, {{>long}}{{/inline}}
{{#*inline "name"}}{{#if name}}{{name}}{{else}}{{>latlong}}{{/if}}{{/inline}}

<div uk-lightbox style="display:inline;">
    <a
        href="https://maps.google.com/maps?q={{>lat}},{{>long}}&z=14&amp;output=embed"
        data-caption="<a href='https://maps.google.com/maps?q={{>lat}},{{>long}}&z=14&amp'>{{>name}}</a>{{#if desc}}{{desc.html}}{{/if}}"
        data-type="iframe"
    >
    {{>name}}
    </a>
</div>